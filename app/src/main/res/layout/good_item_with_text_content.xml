<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/dimgray"
        card_view:contentPaddingRight="5dp"
        card_view:contentPaddingLeft="5dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="5dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/good_item_user_icon"
                android:src="@drawable/icon_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/good_item_linear"
                android:layout_toRightOf="@id/good_item_user_icon"
                android:layout_alignTop="@id/good_item_user_icon"
                android:layout_marginLeft="5dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/good_item_user_name"
                    android:text="林树宏" />
                <TextView
                    android:id="@+id/good_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/good_item_user_name"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="2015.7.12"/>
                <TextView
                    android:id="@+id/good_item_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/good_item_user_name"
                    android:textSize="10dp"
                    android:gravity="right"
                    android:text="来自android客户端"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/good_item_linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/good_item_linear"
                android:layout_toRightOf="@id/good_item_user_icon"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/good_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="提供了滑动到底部自动加载更多的功能，是我自己根据以前listview的经验写的，由于加载的速度过快，在删除加载更多的提示时，有时会出现页面有一部分空白间距的问题，没办法，只好postdelay 50毫秒，再将加载回来的list追加到末尾。"
                    />
                <com.moonlight.nasa.lostandfound.UI.GoodItemGridView
                    android:id="@+id/good_item_gridview"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"></com.moonlight.nasa.lostandfound.UI.GoodItemGridView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/good_item_linear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/good_item_linear2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/good_item_location_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/eye"/>
                <TextView
                    android:id="@+id/good_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="10dp"
                    android:text="广州番禺 广州大学"
                    android:gravity="right|bottom"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="3dp"
                android:background="@color/red"
                android:layout_below="@id/good_item_linear3"/>
            <LinearLayout
                android:id="@+id/good_item_linear4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/good_item_linear3"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/good_item_linear_transmit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/good_item_transmit_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/share"/>
                    <TextView
                        android:id="@+id/good_item_transmit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="转发"/>
                </LinearLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/red"/>
                <LinearLayout
                    android:id="@+id/good_item_linear_leave_word_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/good_item_leave_word_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mail"/>
                    <TextView
                        android:id="@+id/good_item_leave_word_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="留言"/>
                </LinearLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/red"/>

                <LinearLayout
                    android:id="@+id/good_item_linear_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/good_item_like_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/heart"/>
                    <TextView
                        android:id="@+id/good_item_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="点赞"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>